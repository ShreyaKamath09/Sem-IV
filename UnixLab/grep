#displaying all S13 students
 grep S13 StudentRecords
 
#displaying all S12 students
grep S12 StudentRecords

#displaying roll number 8
grep 08 StudentRecords

#displaying all students with surname Kamath 
grep Kamath StudentRecords

#transferring all students with surname Kamath to another file
grep Kamath StudentRecords>Kamath1.txt

#displaying that file
vi Kamath1.txt
